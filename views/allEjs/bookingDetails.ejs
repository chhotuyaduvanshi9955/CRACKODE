<%layout("/layouts/boilerplate") %>

<style>
    .booking-details-container {
        max-width: 800px;
        margin: 40px auto;
        padding: 20px;
    }

    .booking-status {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        text-align: center;
    }

    .booking-status h1 {
        margin: 0 0 15px 0;
        font-size: 2rem;
    }

    .confirmation-code {
        background: rgba(255, 255, 255, 0.2);
        padding: 15px;
        border-radius: 6px;
        font-size: 1.1rem;
        font-weight: 700;
        margin: 15px 0;
        font-family: 'Courier New', monospace;
    }

    .booking-card {
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
    }

    .booking-card h2 {
        color: #333;
        margin-top: 0;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 2px solid #f0f0f0;
    }

    .detail-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 20px;
    }

    .detail-item {
        padding: 15px;
        background: #f8f9fa;
        border-radius: 6px;
        border-left: 3px solid #667eea;
    }

    .detail-label {
        font-size: 0.85rem;
        color: #666;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .detail-value {
        font-size: 1.2rem;
        color: #333;
        font-weight: 700;
    }

    .detail-icon {
        color: #667eea;
        margin-right: 8px;
    }

    .restaurant-section {
        display: flex;
        gap: 20px;
        align-items: center;
    }

    .restaurant-logo {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2rem;
    }

    .restaurant-info {
        flex: 1;
    }

    .restaurant-info h3 {
        margin: 0 0 10px 0;
        font-size: 1.5rem;
    }

    .restaurant-info p {
        margin: 5px 0;
        color: #666;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .btn-action {
        flex: 1;
        padding: 14px;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .btn-print {
        background: #667eea;
        color: white;
    }

    .btn-print:hover {
        background: #5568d3;
        transform: translateY(-2px);
    }

    .btn-cancel {
        background: #f0f0f0;
        color: #333;
        border: 2px solid #ddd;
    }

    .btn-cancel:hover {
        background: #e0e0e0;
        border-color: #bbb;
    }

    .status-badge {
        display: inline-block;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.9rem;
        text-transform: uppercase;
        margin-top: 10px;
    }

    .status-confirmed {
        background: #d4edda;
        color: #155724;
    }

    .status-cancelled {
        background: #f8d7da;
        color: #721c24;
    }

    .timeline {
        position: relative;
        padding: 30px 0;
    }

    .timeline-item {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
        position: relative;
    }

    .timeline-icon {
        width: 50px;
        height: 50px;
        background: #667eea;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
        flex-shrink: 0;
    }

    .timeline-content h4 {
        margin: 0;
        color: #333;
    }

    .timeline-content p {
        margin: 5px 0 0 0;
        color: #666;
        font-size: 0.9rem;
    }

    .note-section {
        background: #e7f3ff;
        border-left: 4px solid #2196F3;
        padding: 15px;
        border-radius: 4px;
        margin-top: 20px;
    }

    .note-section h4 {
        margin-top: 0;
        color: #1565c0;
    }

    .note-section ul {
        margin: 10px 0;
        padding-left: 20px;
    }

    .note-section li {
        margin: 8px 0;
        color: #555;
    }

    @media (max-width: 768px) {
        .detail-row {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
        }

        .restaurant-section {
            flex-direction: column;
            text-align: center;
        }
    }
</style>

<div class="booking-details-container">
    <div class="booking-status">
        <h1>
            <% if (booking.status === 'confirmed') { %>
                <i class="fas fa-check-circle"></i> Booking Confirmed
            <% } else if (booking.status === 'cancelled') { %>
                <i class="fas fa-times-circle"></i> Booking Cancelled
            <% } else { %>
                <i class="fas fa-clock"></i> Booking <%= booking.status %>
            <% } %>
        </h1>
        <p>Your reservation is confirmed and ready!</p>
        <div class="confirmation-code">
            <%= booking.confirmationCode %>
        </div>
        <span class="status-badge status-<%= booking.status %>">
            <%= booking.status.toUpperCase() %>
        </span>
    </div>

    <!-- Restaurant Card -->
    <div class="booking-card">
        <h2>Restaurant Details</h2>
        <div class="restaurant-section">
            <div class="restaurant-logo">
                <i class="fas fa-utensils"></i>
            </div>
            <div class="restaurant-info">
                <h3><%= booking.restaurantId.name %></h3>
                <p><i class="fas fa-map-marker-alt" style="color: #667eea;"></i> <%= booking.restaurantId.city %></p>
                <p><i class="fas fa-phone" style="color: #667eea;"></i> (123) 456-7890</p>
                <p><i class="fas fa-utensils" style="color: #667eea;"></i> <%= booking.restaurantId.cuisine %></p>
                <p><i class="fas fa-star" style="color: #ffc107;"></i> <%= booking.restaurantId.rating %>/5 Rating</p>
            </div>
        </div>
    </div>

    <!-- Booking Details Card -->
    <div class="booking-card">
        <h2>Reservation Details</h2>
        
        <div class="detail-row">
            <div class="detail-item">
                <div class="detail-label"><i class="fas fa-user detail-icon"></i>Guest Name</div>
                <div class="detail-value"><%= booking.name %></div>
            </div>
            <div class="detail-item">
                <div class="detail-label"><i class="fas fa-envelope detail-icon"></i>Email</div>
                <div class="detail-value"><%= booking.email %></div>
            </div>
        </div>

        <div class="detail-row">
            <div class="detail-item">
                <div class="detail-label"><i class="fas fa-phone detail-icon"></i>Phone</div>
                <div class="detail-value"><%= booking.phone %></div>
            </div>
            <div class="detail-item">
                <div class="detail-label"><i class="fas fa-users detail-icon"></i>Number of Guests</div>
                <div class="detail-value"><%= booking.guests %></div>
            </div>
        </div>

        <div class="detail-row">
            <div class="detail-item">
                <div class="detail-label"><i class="fas fa-calendar detail-icon"></i>Date</div>
                <div class="detail-value"><%= new Date(booking.date + 'T00:00:00').toLocaleDateString('en-US', {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'}) %></div>
            </div>
            <div class="detail-item">
                <div class="detail-label"><i class="fas fa-clock detail-icon"></i>Time</div>
                <div class="detail-value"><%= booking.time %></div>
            </div>
        </div>

        <% if (booking.specialRequests) { %>
            <div class="detail-item">
                <div class="detail-label"><i class="fas fa-sticky-note detail-icon"></i>Special Requests</div>
                <div class="detail-value"><%= booking.specialRequests %></div>
            </div>
        <% } %>

        <div class="detail-item" style="margin-top: 15px;">
            <div class="detail-label"><i class="fas fa-calendar-check detail-icon"></i>Booked On</div>
            <div class="detail-value"><%= new Date(booking.timestamp).toLocaleString() %></div>
        </div>
    </div>

    <!-- Timeline -->
    <div class="booking-card">
        <h2>What's Next?</h2>
        <div class="timeline">
            <div class="timeline-item">
                <div class="timeline-icon"><i class="fas fa-check"></i></div>
                <div class="timeline-content">
                    <h4>Booking Confirmed</h4>
                    <p>Your reservation has been successfully confirmed. A confirmation email has been sent to <%= booking.email %></p>
                </div>
            </div>

            <div class="timeline-item">
                <div class="timeline-icon"><i class="fas fa-bell"></i></div>
                <div class="timeline-content">
                    <h4>Reminder Notification</h4>
                    <p>You'll receive a reminder notification 24 hours before your reservation</p>
                </div>
            </div>

            <div class="timeline-item">
                <div class="timeline-icon"><i class="fas fa-door-open"></i></div>
                <div class="timeline-content">
                    <h4>Arrive at Restaurant</h4>
                    <p>Please arrive 10 minutes early. Show your confirmation code at the entrance</p>
                </div>
            </div>

            <div class="timeline-item">
                <div class="timeline-icon"><i class="fas fa-utensils"></i></div>
                <div class="timeline-content">
                    <h4>Enjoy Your Meal</h4>
                    <p>Sit back, relax, and enjoy delicious food and great service!</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Important Notes -->
    <div class="booking-card">
        <div class="note-section">
            <h4><i class="fas fa-info-circle"></i> Important Information</h4>
            <ul>
                <li>Please arrive 10-15 minutes before your reservation time</li>
                <li>Cancellations allowed up to 24 hours before the reservation</li>
                <li>The minimum seating duration is 2 hours</li>
                <li>In case of any changes, please call the restaurant directly</li>
                <li>Your confirmation code is: <strong><%= booking.confirmationCode %></strong></li>
            </ul>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <button class="btn-action btn-print" onclick="window.print()">
            <i class="fas fa-print"></i> Print Booking
        </button>
        <% if (booking.status === 'confirmed') { %>
            <button class="btn-action btn-cancel" onclick="cancelBooking('<%= booking._id %>')">
                <i class="fas fa-times"></i> Cancel Booking
            </button>
        <% } %>
    </div>
</div>

<script>
    function cancelBooking(bookingId) {
        if (confirm('Are you sure you want to cancel this booking? This action cannot be undone.')) {
            fetch(`/api/bookings/cancel/${bookingId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Booking cancelled successfully');
                    location.reload();
                } else {
                    alert('Error cancelling booking: ' + data.message);
                }
            })
            .catch(err => {
                alert('Error: ' + err.message);
            });
        }
    }
</script>
